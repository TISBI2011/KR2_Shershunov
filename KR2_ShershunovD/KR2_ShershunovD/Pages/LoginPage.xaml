<Page x:Class="KR2_ShershunovD.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_ShershunovD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="TBPassword"/>
            <Button x:Name="BLogin" Content="Войти" Click="BLogin_Click"/>
        </StackPanel>
    </Grid>
</Page>
