<Page x:Class="KR2_ShershunovD.Pages.RegistrationPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_ShershunovD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPages">

    <Grid>
        <StackPanel>
            <TextBlock Text="Имя"/>
            <TextBox Text="{Binding Name}"/>
            <TextBlock Text="Логин"/>
            <TextBox Text="{Binding Login}"/>
            <TextBlock Text="Пароль"/>
            <TextBox Text="{Binding Password}"/>
            <TextBlock Text="Роль"/>
            <ComboBox x:Name="CBRole" DisplayMemberPath="Name"
                      SelectedItem="{Binding Role}"/>
            <Button x:Name="BSave" Content="Регистрация" Click="BSave_Click"/>
            <Button x:Name="BBack" Content="Вернуться" Click="BBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
